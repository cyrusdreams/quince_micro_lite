\begin_inset CommandInset href
LatexCommand href
name "mikrocontroller.net)"
target "https://www.mikrocontroller.net/attachment/672558/WCH-LinkE-APP-IAP.bin"
literal "false"

\end_inset


\end_layout

\begin_deeper
